# XDG_CONFIG_HOME/bash/bashrc.d/functions

mpw () {
    case "$1" in
        cb)
            shift
            (mpv "$(xsel -bo)" "$@" &>/dev/null & disown)
            ;;
        pb)
            shift
            (mpv "$(xsel -po)" "$@" &>/dev/null & disown)
            ;;
        *)
            (mpv "$@" &>/dev/null & disown)
            ;;
    esac
}

pb () {
    curl -F "c=@${1:--}" https://ptpb.pw/
}
